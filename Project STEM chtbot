fname = input("What is your first name? \n")
lname = input("What is your last name? \n")
print("Hi there, " +fname+ " " +lname +", nice to meet you!")
print("\n")
age = int(input("How old are you?\n"))
if (age == 17):
    print(str(age) + " is a good age.\nYou are old enough to drive.")
elif (age > 17):
    print("Mk")
else:
    print("Wow, so young.")
print("\n")
mood = input("So, " + fname+ ", how are you today?\n")
if (mood == "Happy"):
    print("You are "+mood+".\nThat is good to hear.")
elif (mood == "sad"):
    print("I\'m sorry to hear that")
else:
    print("Are you just saying that for the sake of conversation or out\n of a genuine place of feeling?")
